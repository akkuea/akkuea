{
  "name": "@real-estate-defi/api",
  "version": "1.0.0",
  "description": "Backend API for Real Estate DeFi platform",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "bun --watch index.ts",
    "build": "bun build index.ts --target bun --outdir dist",
    "start": "bun run dist/index.js",
    "test": "bun test",
    "lint": "eslint \"src/**/*.ts\"",
    "format": "prettier --write \"src/**/*.{ts,json}\"",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "elysia": "^1.0.0",
    "@elysiajs/cors": "^1.0.0",
    "@elysiajs/swagger": "^1.0.0",
    "stellar-sdk": "^12.0.0",
    "soroban-client": "^1.0.0",
    "@real-estate-defi/shared": "workspace:*"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}