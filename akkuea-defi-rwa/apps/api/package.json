    "stellar-sdk": "^13.3.0",
    "soroban-client": "^1.0.1",
    "zod": "^3.25.76",
    "@real-estate-defi/shared": "workspace:*"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "complexity-report": "^2.0.0-alpha",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.2",
    "prettier": "^3.7.4",
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "typescript": "^5"
